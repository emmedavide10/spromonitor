<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Set the character set and viewport for responsiveness -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Include the custom stylesheet and Font Awesome library -->
    <link rel="stylesheet" href="style/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
    <!-- Button for opening the calendar -->
    <button class='btn btn-light' style='color: #8b7676; border: none;' id="calendarButton">
        <i class='fa fa-calendar' style="margin-right: 4px;"></i>{{gocalendar}}
    </button>

    <!-- Link for going back to the previous page -->
    <a href="#" class="custom-previous-button" id="goBackButton" style="display: block; margin-top: 2%">
        <i class="fas fa-chevron-left"></i> {{goback}}
    </a>

    <!-- JavaScript section for page functionality -->
    <script>
        // Function to go back one page
        function goBack() {
            window.history.back();
        }

        // Function for redirecting to the calendar
        function redirectToCalendar() {
            // Get the calendar URL and redirect
            var calendarurl = '{{calendarurl}}';
            window.location.href = calendarurl;
        }

        // Add event listeners for the buttons
        document.getElementById('calendarButton').addEventListener('click', redirectToCalendar);
        document.getElementById('goBackButton').addEventListener('click', goBack);
    </script>
</body>
</html>
