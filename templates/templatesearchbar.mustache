<!-- HTML document declaration -->
<!DOCTYPE html>
<html>

<head>
    <!-- External stylesheets for custom styles and font awesome -->
    <link rel="stylesheet" href="style/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>

<body>
    <!-- Container for the search bar -->
    <div id="searchbar">
        <!-- Navigation bar with light background and content alignment -->
        <nav class="navbar navbar-light bg-light justify-content-between">
            <!-- Navbar brand for displaying search username -->
            <a class="navbar-brand">{{searchusername}}</a>
            <!-- Form for searching users -->
            <form class="form-inline" method="post" action="">
                <!-- Hidden input for course ID -->
                <input type="hidden" name="courseid" value="{{courseid}}">
                <!-- Hidden input for selected fields -->
                <input type="hidden" id="selectedfields" name="selectedfields" value="{{selectedfields}}">
                <!-- Input field for entering the username -->
                <input name="username" id="username" class="form-control mr-sm-2" type="search"
                    placeholder="{{insusername}}">
                <!-- Button for submitting the search form -->
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i
                        class="fas fa-search"></i> {{search}} </button>
            </form>
        </nav>
    </div>
</body>

</html>
